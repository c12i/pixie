{
  "name": "pixie",
  "version": "1.0.0",
  "description": "A pixel art editor purely built with javascript + canvas",
  "main": "src/index.js",
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "parcel build src/index.html --public-url ./",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "deploy": "gh-pages -d dist",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
  },
  "build": {
    "appId": "tk.muriuki",
    "productName": "pixie",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collinsmuriuki/pixel-art-editor.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/collinsmuriuki/pixel-art-editor/issues"
  },
  "homepage": "https://github.com/collinsmuriuki/pixel-art-editor#readme",
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.0.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.1.2"
  },
  "dependencies": {
    "gh-pages": "^6.1.0"
  }
}
